#include <stdio.h>

int main(){
  char operacion;
  double primernumero, segundonumero;

  printf("Seleccione una operacion (+, -, *, /) : ");
  scanf("%c", &operacion);
  
  print("Digite dos numeros: ");
  scanf("%lf%lf", &primernumero, &segundonumero);
  
  switch(operacion)
  {
  
  case'+':
  printf("%.1lf + %.1lf = %.1lf\n",primernumero, segundonumero, primernumero + segundonumero);
  break;
  
  case'-':
  printf("%.1lf - %.1lf = %.1lf\n",primernumero, segundonumero, primernumero - segundonumero);
  break;
  
  case'*':
  printf("%.1lf * %1lf = %.1lf\n", primernumero, segundonumero, primernumero * segundonumero);
  
  case'/':
  printf("%.1lf / %1lf = %.lf\n", primernumero, segundonumero, primernumero / segundonumero);
  break;
  default;
  printf("Opreacion incorrecta");
  }
  
  return 0;
  }
  
  
  
  
  
  
  
  
  
  
  
  return 0;
}



